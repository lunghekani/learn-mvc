@model WebApplication3.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--
    this is a comment on how to render classes dynamically
-->
@{
    var classname = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@classname">@Model.Movie.MovieName</h2>
@if (Model.Customers.Count == 0)
{
    <text>No one has rented this Movie before</text>
}
else
{

<ul>
@foreach (var customer in Model.Customers)
{
    <li>@customer.name</li>
}
</ul>
}